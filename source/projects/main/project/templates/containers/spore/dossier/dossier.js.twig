jQuery(function($) {
    $(".dossier")
        .find(".dossier__item")
        .on("click", function(event) {
            event.preventDefault();

            var activeSibling = $(this)
                    .siblings(".is-active")
                    .first(),
                currentSibling = $(this);

            $(this)
                .siblings()
                .removeClass("is-active");
            $(this).addClass("is-active");

            if (!activeSibling.length) {
                $(
                    "[data-dossier-image=" +
                        $(currentSibling).data("image-id") +
                        "]"
                ).fadeIn(400);
            }

            $(
                "[data-dossier-image=" + $(activeSibling).data("image-id") + "]"
            ).fadeOut(400, function() {
                $(this).hide();
                $(
                    "[data-dossier-image=" +
                        $(currentSibling).data("image-id") +
                        "]"
                ).fadeIn(400);
            });
        });

    $("[data-dossier-image]").hide();
    $(".dossier")
        .find(".dossier__item")
        .first()
        .trigger("click");
});
