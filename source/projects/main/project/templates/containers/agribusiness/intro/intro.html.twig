{% set locales = {'en-GB': 'en', 'fr-FR': 'fr', 'es-ES': 'es', 'pt-PT': 'pt'} %}

<div class="{{ ["layout", config.container_class]|join("  |  ") }}">
    <div class="layout__cell  layout__cell--main  |  gutters">
        <div class="gutter">
            <p class="lead  |  trailer  |  gutter">{{ labels.lead|t(locales) }}</p>
            <p class="trailer  |  gutter">{{ labels.body|t(locales)|raw }}</p>
        </div>
    </div>
    <aside class="layout__cell layout__cell--aside  |  wings">
        <h2 class="title  |  trailer--tiny  |  gutters">{{ 'key focus areas'|i18n }}</h2>
        <p class="body--whisper  |  trailer trailer--small  |  gutters">{{ 'Smarter agri-food systems: more productive, more integrated, less wasteful and more profitable, inclusive and sustainable.'|t(locales) }}</p>
        <ul class="reset  | list  list--theme  |  gutters">
            <li>{{ 'Increasing youth employment'|t(locales) }}</li>
            <li>{{ 'Job creation'|t(locales) }}</li>
            <li>{{ 'Incomes'|t(locales) }}</li>
            <li>{{ 'Access to markets for small holder producers and SMEs'|t(locales) }}</li>
        </ul>
    </aside>
</div>
