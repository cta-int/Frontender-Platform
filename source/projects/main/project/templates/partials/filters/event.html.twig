{% set locales = {'en-GB': 'en', 'fr-FR': 'fr', 'es-ES': 'es', 'pt-PT': 'pt'} %}

<div class="filter" id="event-filter-by1">
    <button class="filter__trigger  |  title" data-toggle="#event-filter-by1">{{ 'Filter by'|i18n }}</button>
    <ul class="filter__options  |  reset  |  fx">
        <li><a class="filter__item  |  fx filter__item--selected" href="?upcoming=true">{{ 'Upcoming'|i18n }}</a></li>
        <li><a class="filter__item  |  fx" href="?upcoming=false">{{ 'Passed'|i18n }}</a></li>
    </ul>
</div>
