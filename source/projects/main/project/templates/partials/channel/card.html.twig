{% import "macros/date.html.twig" as date %}
{% import "macros/concept.html.twig" as concept %}
{% import "macros/image.html.twig" as image %}
{% import "macros/author.html.twig" as author %}
{% import "macros/label.html.twig" as label %}
{% import "macros/template.html.twig" as helper %}
{% set locales = {'en-GB': 'en', 'fr-FR': 'fr'} %}
{% set theme = channel.articles|first.theme.selector %}

<div class="card {{ config.wide ? 'card--wide' }}  |  well well--neutral   |  {{ theme }}">
    <div class="card__image">
        <figure data-background>
            {{ image.card(channel.articles|first.lead_image, '', config.wide) }}
        </figure>
        <strong class="card__label  |  label  |  is-gt-small-desktop">{{ channel.name|t(locales) }}</strong>
        <span class="card__theme  |  label"></span>
    </div>
    <div class="card__body  |  stack stack--stacked">

        {# Smaller than desktop #}
        <div class="stack__unit stack stack--stacked  |  is-lt-small-desktop">
            <h3 class="title  |  leader--normal  |  trailer--normal">
                <span class="anchor anchor--shy  |  is-heir  |  gutters  |  ">{{ config.wide ? 'Latest trending articles'|t : channel.name|t(locales) }} </span>
            </h3>
            {% if channel.description|t(locales) %}
                <p class="gutters  |  trailer--normal trailer-inside--normal">{{ channel.description|t(locales) }}</p>
            {% endif %}
        </div>

        {# Larger than desktop #}
        <div class="stack stack--stacked stack__unit  |  is-gt-small-desktop">
            {% if config.wide %}
                {# TODO Config title #}
                <h3 class="title  |  leader leader-inside--normal  |  trailer-inside--small  |  {{ config.wide ? 'gutter--right' : 'gutters' }}">{{ 'Latest trending articles'|t(locales) }}</h3>
            {% endif %}
            {% for index, article in channel.articles|slice(0, config.wide ? 2 : 1) %}
                <div class="card__post  |  {{ config.wide ? 'gutter-outside--right' : 'gutters' }}  |  leader-inside--normal trailer-inside--normal">
                    {% include "partials/article/post.html.twig" with {'article': article, 'config': {
                        'show_lead_image': 0,
                        'show_stand_first': 0,
                        'show_publication_date': 1,
                        'show_author': 0,
                        'show_read_more': 0,
                        'show_type': 0,
                        'show_topic': 0,
                        'show_publication': 0
                    }} %}
                </div>
            {% endfor %}
        </div>
        <div class="stack__unit stack__pin  |  {{ config.wide ? '' : 'divider divider--top' }}  |  is-gt-small-desktop  |  leader--small">
            <a class="leader-inside--small  |  {{ config.wide ? 'trailer-inside' : 'trailer-inside--small  |  gutters' }}  |  block-link" href="{{ route({page: channel.path, slug: channel.name|t|slugify, id: channel._id}) }}">view all articles</a>
        </div>

    </div>
</div>