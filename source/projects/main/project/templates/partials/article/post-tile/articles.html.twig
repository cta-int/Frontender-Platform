{% import "macros/pagination.html.twig" as pagination %}
{% set locales = {'en-GB': 'en', 'fr-FR': 'fr'} %}

{% for article in model.articles %}
    {% include "partials/article/post-tile/article.html.twig" with {model: model.articles} %}
{% endfor %}

<div class="grid__cell grid__cell--stretcher gutters body--align-center leader-inside--hero" data-pagination-parent>
    {{ pagination.extend(model, model.articleTotal, {
        model_name: 'Channel\\Articles',
        adapter: 'SCR',
        target: "#" ~ labels.panel_title|t(locales)|slugify ~ ' .grid.panel__body',
        layout: "partials/article/post-tile/articles.html.twig",
        config: {
            labels: {
                panel_title: labels.panel_title
            }
        }
    }) }}
</div>
