{% import "macros/template.html.twig" as helper %}

<{{ config.container_tag|default('div') }}{{ helper.class_attribute(config, 'ctx-item__area')|raw }}{{ helper.container_id_attribute(frontender, 'frontender')|raw }}>
    <div class="fld">
        <label for="ctx-item__area" class="fld-label">{{ labels.field_label|t(locales)|default('Issue'|i18n) }}</label>
        <select id="ctx-item__area" name="issue" class="placeholder-visible">
            <option value="">{{ 'Any'|i18n }}</option>
            
            {% for issue in model.ictupdateIssues %}
                <option value="{{ issue.issue.issueNumberLabel._id }}">{{ 'ictupdate_issue_no'|i18n }} {{ issue.number }}</option>
            {% endfor %}
        </select>
    </div>
</{{ config.container_tag|default('div') }}>
