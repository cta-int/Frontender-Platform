{% import "macros/template.html.twig" as helper %}
{% set locales = {'en-GB': 'en', 'fr-FR': 'fr', 'es-ES': 'es', 'pt-PT': 'pt'} %}

<{{ config.container_tag|default('div') }}{{ helper.class_attribute(config, 'ctx-item__date')|raw }}{{ helper.container_id_attribute(frontender, 'frontender')|raw }}>
    <div class="fld">
        <label for="ctx-item__date" class="fld-label">{{ labels.field_label|t(locales)|default('Region'|i18n) }}</label>
        <select id="ctx-item__date" name="location" class="placeholder-visible">
            <option value="">{{ 'All'|i18n }}</option>
            {% include 'partials/search-fields/region__options.html.twig'%}
        </select>
    </div>
</{{ config.container_tag|default('div') }}>
