{% import "macros/template.html.twig" as helper %}
{% set locales = {'en-GB': 'en', 'fr-FR': 'fr', 'es-ES': 'es', 'pt-PT': 'pt'} %}

<{{ config.container_tag|default('div') }}{{ helper.class_attribute(config, 'ctx-item__content-type  |  ctx-item__date')|raw }}{{ helper.container_id_attribute(frontender, 'frontender')|raw }}>
    <div class="fld">
        <label for="ctx-item__article" class="fld-label">{{ labels.field_label|t(locales)|default('Type'|t(locales)) }}</label>
        <select id="ctx-item__article" name="type" class="placeholder-visible">
            <option value="">{{ 'All'|t(locales) }}</option>
            {% include 'partials/search-fields/event-type__options.html.twig' with {model: article} %}
        </select>
    </div>
</{{ config.container_tag|default('div') }}>
