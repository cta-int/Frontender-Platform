{% if show_teleport %}
    <h2 class="trailer">
        {% include("modules/teleport/teleport.html.twig")  %}
    </h2>
{% endif %}

{% if articles|length > 1 %}
    {% include("partials/article/post.html.twig") with {model: model|first} %}

    {% for article in model|slice(1) %}
        <hr class="reset  |  divider divider--top  |  leader-inside--tiny leader--small  |  trailer-inside--tiny trailer--small"/>
        {% include("partials/article/post.html.twig") with {model: article, "config": { "show_lead_image": 0, "show_stand_first": 0, "show_read_more": 0 }} %}
    {% endfor %}
{% endif %}
