{% set locales = {'en-GB': 'en', 'fr-FR': 'fr', 'es-ES': 'es', 'pt-PT': 'pt'} %}

<aside class="gutters">
    <h2 class="title  |  trailer--tiny">{{ labels.title|t(locales) }}</h2>
    <p class="body--whisper  |  trailer trailer--small">{{ labels.body|t(locales) }}</p>
    {% if labels.list_items|length %}
    <ul class="reset">
        {% for link in labels.list_items %}
        <li class="block-link"><a href="{{ link.url|t(locales) }}">{{ link.label|t(locales) }}</a></li>
        {% endfor %}
    </ul>
    {% endif %}
</aside>
